<h3>Add User</h3>

<%= form_for @user do |f| %>

<%= f.label :email %><br/>
<%= f.email_field :email %><br/>

<%= f.label :password %><br/>
<%= f.text_field :password %><br/>

<%= f.label :college %><br/>
<%= f.collection_select :college_id, College.all, :id, :name, prompt: "Select the college" %><br/>

<%= f.label :roles %><br/>
<%= f.collection_check_boxes :role_ids, Role.all, :id, :name %><br/>

<%= f.submit %>
<% end %>
