<img src="http://www.dctacademy.com/wp-content/uploads/2016/03/dct-final.jpg">
<%= javascript_include_tag "https://www.google.com/jsapi" %>
<%= wicked_pdf_javascript_include_tag "chartkick" %>

<table border=7>
    <thead>
        <tr>
            <th>Sl.No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>College</th>
            <th>Beneficial</th>
            <th>Join</th>
            <th>Consultant</th>
            <!-- <th colspan="3"></th> -->
        </tr>
    </thead>

    <tbody>
        <% @college.students.each_with_index do |student,index| %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.mobile %></td>
            <td><%= student.college.name %></td>
            <td><%= student.beneficial %></td>
            <td><%= student.joining %></td>
            <td><%= student.consult %></td>
            <!-- <td><%= link_to 'Show', student %></td> -->
        </tr>
        <% end %>
    </tbody>
</table>

<% data = {}
          data["beneficial"] = @college.students.where('beneficial = ?', true).count
          data["not_beneficial"] = @college.students.where('beneficial = ?', false).count
        %>
<h3>Students Not Felt Beneficail :-
    <%= @college.students.where('beneficial = ?', false).count %>/
    <%= @college.students.count %></h3>
<% @college.students.where('beneficial = ?', false).each do |student| %>
<li>
    <%= student.name %>
</li>
<% end %>

<%= pie_chart(data) %>
