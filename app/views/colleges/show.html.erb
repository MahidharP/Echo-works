<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @college.name %>
</p>
<p>
  <strong>College Code</strong>
  <%= @college.code %>
</p>

<div class="panel panel-primary">
<div class = "panel-heading">Listing Students for <%= @college.name %></div>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>College code</th>
      <th>Beneficial</th>
      <th>Feedback</th>
      <th>Join</th>
      <th>Consultant</th>
      <th>Suggestion</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @college.students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.mobile %></td>
        <td><%= student.collge %></td>
        <td><%= student.beneficial %></td>
        <td><%= student.feedback %></td>
        <td><%= student.join %></td>
        <td><%= student.consult %></td>
        <td><%= student.suggestion %></td>

        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>




