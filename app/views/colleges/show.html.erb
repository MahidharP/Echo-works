<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-9">
<p>
  <strong>Name:</strong>
  <%= @college.name %>
</p>
<p>
  <strong>College Code</strong>
  <%= @college.code %>
</p>
<p>
  <strong>Number of Workshops :- </strong>
  <%= @college.workshops.count %>
</p>
<div class="panel panel-primary">
  <div class="panel-heading"><h3>Listing Workshops For this College <%= @college.workshops.count %></h3></div>
  <div class="panel-body">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Students count</th>
      <th>Amount</th>
      <th>Fee</th>
      <th>Workshop type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @college.workshops.each do |workshop| %>
      <tr>
        <td><%= link_to workshop.name, workshop_path(workshop.id) %></td>
        <td><%= workshop.start_date %></td>
        <td><%= workshop.end_date %></td>
        <td><%= workshop.students_count %></td>
        <td><%= workshop.amount %></td>
        <td><%= workshop.fee %></td>
        <td><%= workshop.workshop_type.try(:name) %></td>
        <td><%= link_to 'Show', workshop %></td>
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
        <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
<div class="col-md-3">

<h3>Add Workshop</h3>


<%= render '/workshops/form' %>






</div>
</div>

<%= link_to 'Edit', edit_college_path(@college) %> |
