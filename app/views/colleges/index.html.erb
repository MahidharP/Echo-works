<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>
            Listing Colleges
        </h1>
    </div>
    <div class="panel-body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @colleges.each do |college| %>
                <tr>
                    <td><%= college.name %></td>
                    <td><%= link_to 'Show', college %></td>
                    <td><%= link_to 'Edit', edit_college_path(college) %></td>
                    <td><%= link_to 'Destroy', college, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<br>
<% if can? :create, College.new %>
<%= link_to 'New College', new_college_path %>
<% end %>
