<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>
            Listing Workshops
        </h1>
    </div>
    <div class="panel-body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Students count</th>
                    <th>Amount</th>
                    <th>Fee</th>
                    <th>College</th>
                    <th>Workshop type</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @workshops.each do |workshop| %>
                <tr>
                    <td><%= workshop.name %></td>
                    <td><%= workshop.start_date %></td>
                    <td><%= workshop.end_date %></td>
                    <td><%= workshop.students_count %></td>
                    <td><%= workshop.amount %></td>
                    <td><%= workshop.fee %></td>
                    <td><%= workshop.college.try(:name) %></td>
                    <td><%= workshop.workshop_type.try(:name) %></td>
                    <td><%= link_to 'Show', workshop %></td>
                    <% if current_user.is_admin? %>
                    <td><%= link_to 'Edit', edit_workshop_path(workshop) %></td>
                    <td><%= link_to 'Destroy', workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<br>
