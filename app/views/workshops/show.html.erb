<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @workshop.name %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @workshop.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @workshop.end_date %>
</p>

<p>
  <strong>Students count:</strong>
  <%= @workshop.students_count %>
</p>

<p>
  <strong>Amount:</strong>
  <%= @workshop.amount %>
</p>

<p>
  <strong>Fee:</strong>
  <%= @workshop.fee %>
</p>

<p>
  <strong>College:</strong>
  <%= @workshop.college %>
</p>

<p>
  <strong>Workshop type:</strong>
  <%= @workshop.workshop_type.try(:name) %>
</p>

<div class="panel panel-primary">
<div class = "panel-heading">Listing Students for this workshop</div>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>College code</th>
      <th>Beneficial</th>
      <th>Feedback</th>
      <th>Join</th>
      <th>Consultant</th>
      <th>Suggestion</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workshop.students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.mobile %></td>
        <td><%= student.collge %></td>
        <td><%= student.beneficial %></td>
        <td><%= student.feedback %></td>
        <td><%= student.join %></td>
        <td><%= student.consult %></td>
        <td><%= student.suggestion %></td>

        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'Edit', edit_workshop_path(@workshop) %> |
<%= link_to 'Back', workshops_path %>
