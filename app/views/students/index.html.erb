<p id="notice"><%= notice %></p>
<% if user_signed_in? %>

<div class="panel panel-primary">
    <div class="panel-heading">Listing Students :
        <%= Student.count %></div>

    <%= link_to students_path(format: "xls"), class: "btn btn-info btn-sm pull-right" do %>
    <span class="glyphicon glyphicon-download-alt"></span>
    Export to Excel
    <% end %>
    <%= link_to students_path(format: "pdf"), class: "btn btn-info btn-sm pull-right" do %>
    <span class="glyphicon glyphicon-download-alt"></span>
    Export to Pdf
    <% end %>
    <script>
        $(document).ready(function () {
            $('#students').DataTable();
        });
    </script>

    <table class="table table-striped" id="students">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>College</th>

                <!-- <th colspan="3"></th> -->
            </tr>
        </thead>

        <tbody>
            <% @students.each do |student| %>
            <tr>
                <td><%= student.name %></td>
                <td><%= student.email %></td>
                <td><%= student.mobile %></td>
                <td><%= student.college.name %></td>

                <!-- <td><%= link_to 'Show', student %></td> -->

            </tr>
            <% end %>
        </tbody>
    </table>
</div>

<br>
<% if can? :create, Student.new %>
<%= link_to 'New Student', new_student_path %>
<% end %>
<% end %>
