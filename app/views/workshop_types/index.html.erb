<p id="notice"><%= notice %></p>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1>
            Listing Workshop Types
        </h1>
    </div>
    <div class="panel-body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @workshop_types.each do |workshop_type| %>
                <tr>
                    <td><%= workshop_type.name %></td>
                    <td><%= link_to 'Show', workshop_type %></td>
                    <td><%= link_to 'Edit', edit_workshop_type_path(workshop_type) %></td>
                    <td><%= link_to 'Destroy', workshop_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<br>

<%= link_to 'New Workshop type', new_workshop_type_path %>
